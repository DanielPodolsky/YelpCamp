<% layout('/layout/boilerplate')%>

<div
  id="cluster-map"
  style="width: 100%; height: 500px"
  data-api-key="<%= process.env.MAPTILER_API_KEY %>"
  data-campgrounds="<%= encodeURIComponent(JSON.stringify(campgroundsGeoJSON)) %>"
></div>

<h1 class="mt-4">All Campgrounds</h1>
<div class="mb-3">
  <a href="/campgrounds/new" class="btn btn-primary">Create New Campground</a>
</div>

<% for (let campground of campgrounds) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if (campground.images && campground.images.length > 0) { %>
      <img
        class="img-fluid"
        src="<%= campground.images[0].url %>"
        alt="<%= campground.title %>"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= campground.title %></h5>
        <p class="card-text"><%= campground.description %></p>
        <p class="card-text text-secondary">
          <small><%= campground.location %></small>
        </p>
        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"
          >View <%= campground.title %></a
        >
      </div>
    </div>
  </div>
</div>
<% } %>

<script src="/javascripts/clusterMap.js"></script>
